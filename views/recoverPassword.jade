extends layout

block content
      .container.login-formContainer
        if(sent)
          h1(style='color:#008000').slogan Your password has been sent to your registered email
          h1.slogan Please check your email and 
            a(href='./login')  login
          br
        else
          h1.slogan
            | Please enter your email and your new passowrd 
          br
          form.container.form-login(action='./recoverPassword' method='post')
            .container.credentials
              input.login-input(type='email' name='recoverEmail' id='' placeholder='Enter your email' required='')
              br
              div.unvalid
                small#passError
              input.login-input(required='' type='password' name='newPass' placeholder='Enter your password' id='password' onkeyup ="nospaces(this)")
              br
              input(type="text" name='tempPass' hidden='' value='#{tempPass}')
              button.btn.btn-info.login-input-btn Send
              br
      div(style='min-height: 6em;')  